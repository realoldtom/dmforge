{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DMForge Spell Deck",
    "type": "object",
    "properties": {
        "cards": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "level",
                    "school",
                    "description",
                    "components",
                    "art_url"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "level": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "school": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "casting_time": {
                        "type": "string"
                    },
                    "duration": {
                        "type": "string"
                    },
                    "range": {
                        "type": "string"
                    },
                    "components": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "art_url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "required": [
        "cards"
    ]
}