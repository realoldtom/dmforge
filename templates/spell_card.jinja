<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>DMForge Spell Cards</title>
  <link rel="stylesheet" href="{{ css_path }}">
</head>
<body>
  {% for card in cards %}
  <div class="card">

    <!-- Top Bar: Title + Level/School -->
    <div class="title-line">
      <span class="title">{{ card.title }}</span>
      <span class="level-school">{{ card.level }} â€¢ {{ card.school }}</span>
    </div>

    <!-- Art -->
    <div class="image" style="background-image: url('{{ card.art_url or default_image }}');"></div>

    <!-- Stats in one row -->
    <div class="stats-row">
      <span>{{ card.casting_time }}</span>
      <span>{{ card.range }}</span>
      <span>{{ card.duration }}</span>
      <span>{{ card.components | join(", ") }}</span>
    </div>

    <!-- Description -->
    <div class="desc">{{ card.description }}</div>

  </div>
  {% endfor %}
</body>
</html>
